<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="tests">

  <groups>
    <run>
      <include name="ErrorHandling"/>
    </run>
  </groups>

  <test name="SubmitOrder test" thread-count="5">
    <classes>
      <class name="vivekacademy.SeleniumFrameworkDesign.FullClass"/>
    </classes>
  </test>

  <test name="ErrorValidation test" thread-count="5">
    <classes>
      <class name="vivekacademy.SeleniumFrameworkDesign.ErrorValidations"/>
    </classes>
  </test>

</suite>
